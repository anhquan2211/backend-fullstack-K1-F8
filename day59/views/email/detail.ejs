<section
  class="flex items-center py-16 lg:py-20 font-poppins container-section-detail shadow"
>
  <div
    class="justify-center flex-1 max-w-screen-xl px-4 py-4 mx-auto text-left lg:py-10 container-detail"
  >
    <div class="mb-10 text-center">
      <h1 class="text-3xl font-bold capitalize mb-6 heading-detail">
        Email Detail
      </h1>
    </div>
    <div class="p-4 mb-6 rounded-md bg-gray-50">
      <div class="flex items-center justify-between">
        <a
          href="#"
          class="inline-block mb-2 text-xs font-semibold text-blue-500 hover:text-blue-600"
        >
          To: <%= data?.email_to %>
        </a>
        <span class="mb-2 text-xs text-gray-500"
          ><%= moment(data?.sent_time).format('MMMM Do YYYY, h:mm:ss a')
          %></span
        >
      </div>
      <h2 class="mb-4 text-xl font-semibold text-gray-600">
        <%= data?.subject %>
      </h2>

      <p class="mb-4 text-sm text-gray-500"><%= data?.message %></p>
    </div>

    <hr />

    <div class="px-4 flex items-center justify-between w-full">
      <div>
        <a
          class="inline-flex items-center text-xs font-medium text-blue-500 hover:text-blue-700 hover:ted"
          href="/send-email/history"
        >
          <span class="text-sm font-bold text-blue-500 text-send"
            >View history sent email</span
          >
        </a>
      </div>
      <div class="px-6 py-5 text-right">
        <a
          class="inline-flex items-center text-xs font-medium text-blue-500 hover:text-blue-700 hover:ted"
          href="/send-email"
        >
          <span class="text-sm font-bold text-blue-500 text-send"
            >Click to send email</span
          >
        </a>
      </div>
    </div>
  </div>
</section>
