<div class="">
    <h1>Sửa người dùng</h1>
  
    <form method="post">
      <div class="mb-3">
        <label for="exampleInputName" class="form-label">Name</label>
        <input
          type="name"
          name="name"
          class="form-control"
          id="exampleInputName"
          placeholder="Tên..."
          value="<%= req?.old?.name === '' ? req?.old?.name :  user.name %>"
        />
        <%- req?.errors?.name ? `<span class="text-danger"
        >${req?.errors?.name}</span
      >`: '' %>
        
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input
          type="text"
          name="email"
          class="form-control"
          id="exampleInputEmail1"
          placeholder="Email..."
          value="<%= req?.old?.email === '' ? req?.old?.email :  user.email %>"
        />
        <%- req?.errors?.email ? `<span class="text-danger"
        >${req?.errors?.email}</span
      >`: '' %>

        <% if (emailErrorsText) { %>
          <div class="text text-danger mt-3"><%= emailErrorsText.email %></div>
        <% } %>
        
      </div>
      <div class="mb-3">
        <label for="disabledSelect" class="form-label">Status</label>
        <select id="disabledSelect" class="form-select" name="status">
          <option value="0" <%= user.status ? '' : 'selected' %>>Chưa kích hoạt</option>
          <option value="1" <%= user.status ? 'selected' : '' %>>Kích hoạt</option>
        </select>
      </div>
  
      <button type="submit" class="btn btn-primary">Lưu</button>
      <a href="/users" class="btn btn-danger">Quay lại</a>
    </form>
  </div>
  